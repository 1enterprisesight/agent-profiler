# Agent Profiler Environment Variables

# ============================================================================
# Google Cloud Configuration
# ============================================================================
GOOGLE_CLOUD_PROJECT=client-profiler-473903
VERTEX_AI_LOCATION=us-central1
GCS_BUCKET_NAME=client-profiler-473903-agent-profiler-data

# ============================================================================
# Database Configuration
# ============================================================================
# For Cloud Run (Unix Socket)
DATABASE_URL=postgresql+asyncpg://postgres:reedmichael@/agent_profiler?host=/cloudsql/client-profiler-473903:us-central1:client-profiler-db

# For Local Development (Cloud SQL Proxy)
# DATABASE_URL=postgresql+asyncpg://postgres:reedmichael@127.0.0.1:5432/agent_profiler

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_HOST=10.x.x.x
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ============================================================================
# Gemini Models
# ============================================================================
GEMINI_FLASH_MODEL=gemini-2.0-flash-exp
GEMINI_PRO_MODEL=gemini-1.5-pro

# ============================================================================
# Authentication
# ============================================================================
GOOGLE_OAUTH_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=stored-in-secret-manager
ALLOWED_DOMAIN=enterprisesight.com
JWT_SECRET_KEY=stored-in-secret-manager
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ============================================================================
# Application Configuration
# ============================================================================
APP_ENV=development
LOG_LEVEL=INFO
ENABLE_CORS=true
CORS_ORIGINS=http://localhost:3000,https://agent-profiler-frontend-*.run.app

# ============================================================================
# Agent Configuration
# ============================================================================
AGENT_TIMEOUT_SECONDS=300
MAX_AGENT_RETRIES=3
ENABLE_AGENT_LOGGING=true
ENABLE_SQL_QUERY_LOGGING=true
ENABLE_LLM_CONVERSATION_LOGGING=true

# ============================================================================
# CRM Configuration
# ============================================================================
SALESFORCE_API_VERSION=v60.0
CRM_SYNC_BATCH_SIZE=100
CRM_RATE_LIMIT_BUFFER=0.1

# ============================================================================
# Feature Flags
# ============================================================================
ENABLE_CSV_UPLOAD=true
ENABLE_SALESFORCE_CONNECTOR=true
ENABLE_WEALTHBOX_CONNECTOR=false
ENABLE_REDTAIL_CONNECTOR=false
ENABLE_JUNXURE_CONNECTOR=false
